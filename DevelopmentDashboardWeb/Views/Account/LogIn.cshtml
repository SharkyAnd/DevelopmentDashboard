@{
    ViewBag.Title = "Development Dashboard - Login";
}

<div class="container">
    <form method="POST" action="@Url.Action("Login", "Account")" style="width:40%;margin:0 auto;">
    <div class="form-group">
        <label for="login">
            User Name/E-mail</label>
        <input name="login" type="text" class="form-control" id="login" placeholder="User">
    </div>
    <div class="form-group">
        <label for="password">
            Password</label>
        <input name="password" type="password" class="form-control" id="password">
        @Html.ValidationMessage("Password")
    </div>
    <div class="text-center">
    <button type="submit" class="btn btn-default">
        Submit</button></div>
    </form>
</div>
