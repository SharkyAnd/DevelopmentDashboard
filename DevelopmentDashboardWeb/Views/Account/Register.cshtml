@{
    ViewBag.Title = "Development Dashboard - Activation";
}
@if (ViewData["Message"] != "Activation code not found")
{
    <div class="container">
        <form method="POST" action="@Url.Action("Register", "Account")" style="width:40%;margin:0 auto;">
        <div class="form-group">
            <label for="password">
                Change your password here</label>
            <input name="password" type="password" class="form-control" id="password" placeholder="Password">
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-default">
                Submit</button></div>
        </form>
    </div>
}
else
{
    <h2>
        @ViewData["Message"].ToString()</h2>
}
